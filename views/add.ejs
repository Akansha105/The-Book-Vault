<body>
<section id="header">
  <div class="addView">
        </div>
    <div >
      <ul>
        <li><a href="/view">VIEW</a></li>
        <li><a href="/">HOME</a></li>
      </ul>
    </div>
</section>
  <main class="container">
    <div class="form-container">
    <form action="/submit" method="post" >
        <h2>MY BOOK VAULT</h2>
        <div class="container">
            <label>ISBN:</label><br>
            <input type="number" name="isbn" placeholder="International Standard Book Number"><br>
        </div>
        <div class="container">
            <label>Title:</label><br>
            <input type="text" name="title" placeholder="Title of the book"><br>
        </div>
        <div class="container">
            <label>Read on:</label><br>
            <input type="date" name="date"placeholder="2024/08/09"><br>
        </div>
        <div class="container">
            <label>Rate out of 10:</label><br>
            <input type="number" name="rate" placeholder="_/10"><br>
        </div>
        <div class="container">
            <label>Notes:</label><br>
            <textarea name="note"  placeholder="start...."></textarea>
        </div>
        <div class="btn"><button onclick="validateForm()" type="submit">+</button></div>
    </form>
    </div>
</main>
<script> 
    function validateForm(){
        let num=document.querySelectorAll('input');
        if(num[0].length<9)
            alert("Please enter a 9 digit valid isbn");
        if(num[3]>10)
            alert("Please rate the book out of 10");
    }
</script>
</body>
</html>